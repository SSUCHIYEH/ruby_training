<%= form_with model: @user,local: true , data: { turbo: false }, class:"form mx-auto w-2/3 bg-white p-8" do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name, class:"border-gray-50" %>
    <%= f.label :password%>
    <%= f.password_field :password, class:"border-gray-50" %>
    <%= f.label :role %>
    <%= f.select :role, options_for_select([0,1]) %>
  
    <%= f.submit %>
  
<% end %>
  