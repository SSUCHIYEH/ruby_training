<%= form_with model: @task,local: true , data: { turbo: false }, class:"form mx-auto w-2/3 bg-white p-8" do |f| %>
  <% if @task.errors.any? %>
    <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="grid gap-4 grid-cols-3 mb-4">
    <div class="col-span-2">
      <%= f.label :title %>
      <%= f.text_field :title, class:"border-gray-50" %>
     </div>
  </div>
  <div class="grid gap-4 grid-cols-3 mb-4">
    <div>
      <%= f.label :status %>
      <%= f.select :status, options_for_select(status_key_options , @task.status) %>            
    </div>
    <div>
      <%= f.label :priority %>
      <%= f.select :priority, options_for_select(priority_key_options , @task.priority) %>
    </div>
    <div>
      <%= f.label :tag %>
      <%= f.select :tag_ids, options_for_select(tags_options, @task.tag_ids), {}, multiple: true %>
    </div>
  </div>
  <div class="grid gap-4 grid-cols-3 mb-4">
    <div>
      <%= f.label :start_time %>
      <%= f.date_field :start_time, as: :date %>
    </div>
    <div>
      <%= f.label :end_time %>
      <%= f.date_field :end_time, as: :date%>
    </div>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                       
  </div>
  <%= f.label :content %>
  <%= f.text_area :content%>
  <%= f.submit %>
<% end %>
