<%= form_for(@task) do |f| %>
    <%= f.label :title, "標題" %>
    <%= f.text_field :title %> <br />

    <%= f.label :status, "狀態" %>
    <%= f.select :status, options_for_select($status_options.map {|o|[o[:label],o[:value]]},@task.status) %>                 
    
    <%= f.label :priority, "優先" %>
    <%= f.select :priority, options_for_select($priority_options.map {|o|[o[:label],o[:value]]},@task.priority) %><br />     

    <%= f.label :start_time, "開始時間" %>
    <%= f.date_field :start_time, as: :date, value: f.object.try(:strftime,"%Y/%m/%d") %> 

    <%= f.label :end_time, "結束時間" %>
    <%= f.date_field :end_time, as: :date, value: f.object.try(:strftime,"%Y/%m/%d") %> <br />                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                              

    <%= f.label :content, "內容" %>
    <%= f.text_area :content %> <br />        

    <%= f.submit %>
<% end %>